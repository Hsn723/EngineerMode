<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:textSize="30.0sp"
            android:textColor="#ffff0000"
            android:id="@id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/rgbsensor_irrate_write_message"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@id/editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@id/textView"
            android:inputType="number"
            android:layout_alignParentStart="true"
            android:labelFor="@id/editText">

            <requestFocus />
        </EditText>

        <Button
            android:id="@id/btn_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rgbsensor_irrate_write_btn"
            android:layout_below="@id/editText"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="30.0sp"
            android:textColor="#ff00ff00"
            android:gravity="center"
            android:id="@id/lightvalue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_below="@id/btn_write"
            android:layout_alignParentStart="true" />

        <TextView
            android:textSize="30.0sp"
            android:textColor="#ff00ff00"
            android:gravity="center"
            android:id="@id/rgbvalue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_below="@id/lightvalue"
            android:layout_alignParentStart="true" />

        <TextView
            android:textSize="30.0sp"
            android:textColor="#ff00ff00"
            android:gravity="center"
            android:id="@id/cctvalue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_below="@id/rgbvalue"
            android:layout_alignParentStart="true" />

        <TextView
            android:textSize="30.0sp"
            android:textColor="#ff0000ff"
            android:gravity="center"
            android:id="@id/cmdresult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_below="@id/cctvalue"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>