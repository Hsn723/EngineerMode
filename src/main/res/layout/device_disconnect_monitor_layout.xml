<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="25.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/front_camera_monitor_summary"
            android:layout_weight="1.0" />

        <TextView
            android:textSize="25.0dip"
            android:id="@id/front_camera_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_unknown_status"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="25.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/second_back_camera_monitor_summary"
            android:layout_weight="1.0" />

        <TextView
            android:textSize="25.0dip"
            android:id="@id/second_back_camera_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_unknown_status"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="25.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/back_camera_monitor_summary"
            android:layout_weight="1.0" />

        <TextView
            android:textSize="25.0dip"
            android:id="@id/back_camera_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_unknown_status"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="25.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/vibrator_monitor_summary"
            android:layout_weight="1.0" />

        <TextView
            android:textSize="25.0dip"
            android:id="@id/vibrator_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_unknown_status"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="25.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/flashlight_monitor_summary"
            android:layout_weight="1.0" />

        <TextView
            android:textSize="25.0dip"
            android:id="@id/flashlight_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_unknown_status"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="25.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mic_monitor_summary"
            android:layout_weight="1.0" />

        <TextView
            android:textSize="25.0dip"
            android:id="@id/mic_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_unknown_status"
            android:layout_weight="1.0" />
    </LinearLayout>

    <TextView
        android:textSize="36.0dip"
        android:gravity="center"
        android:id="@id/count_down"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>