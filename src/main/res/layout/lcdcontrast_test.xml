<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="40.0sp"
            android:id="@id/textview_lcd_brightness"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/lcd_brightness" />

        <SeekBar
            android:layout_gravity="center_horizontal"
            android:id="@id/sb_set_brightness"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip"
            android:layout_width="300.0dip"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120.0dip">

            <Button
                android:textSize="20.0sp"
                android:id="@id/btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brightness_more"
                android:layout_weight="1.0" />

            <Button
                android:textSize="20.0sp"
                android:id="@id/btn_less"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brightness_less"
                android:layout_weight="1.0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120.0dip">

            <Button
                android:textSize="20.0sp"
                android:gravity="center"
                android:id="@id/btn_lcd_bright_set_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60.0dip"
                android:text="@string/lcd_bright_reset"
                android:layout_weight="1.0" />

            <Button
                android:textSize="20.0sp"
                android:gravity="center"
                android:id="@id/btn_lcd_bright_set_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60.0dip"
                android:text="@string/ok"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/judgetment_buttons" />
</RelativeLayout>