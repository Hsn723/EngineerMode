<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="15.0dip"
        android:textColor="#ffff0000"
        android:id="@id/key_bt_auto_test_waring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_auto_test_waring"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <ListView
        android:id="@id/btdevices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/key_bt_auto_test_waring"
        android:layout_alignParentLeft="true" />

    <ViewStub
        android:layout_gravity="bottom"
        android:id="@id/stub_judgement_buttons"
        android:layout="@layout/judgetment_buttons"
        android:inflatedId="@id/panel_judgement_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>