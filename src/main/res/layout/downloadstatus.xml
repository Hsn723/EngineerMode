<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="40.0sp"
        android:gravity="center_horizontal"
        android:id="@id/status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@id/smt_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@id/smt_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@id/upgrade_time1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@id/upgrade_version1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@id/upgrade_time2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@id/upgrade_version2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@id/upgrade_time3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@id/upgrade_version3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>