<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="34.0px"
            android:id="@id/autoAgingSettingsText"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <CheckBox
            android:id="@id/autoAgingSettingsCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/autoAgingSettingsPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.4">

            <ToggleButton
                android:textSize="10.0dip"
                android:id="@id/autoAgingSettingsToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.6">

            <TextView
                android:textSize="16.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_duration_second" />

            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/blue"
                android:id="@id/autoAgingSettingsTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>