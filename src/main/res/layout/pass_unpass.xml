<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="@style/background_style"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        style="@style/background_style" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@android:style/ButtonBar">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.0dip">

            <Button
                android:id="@id/pass_unpass_pass"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/test_suc"
                android:layout_weight="1.0"
                style="@style/style_bottom_button_left" />

            <Button
                android:id="@id/pass_unpass_unpass"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/test_failed"
                android:layout_weight="1.0"
                style="@style/style_bottom_button_right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.0dip">

            <Button
                android:id="@id/pass_unpass_retest"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/retest"
                android:layout_weight="1.0"
                style="@style/style_bottom_button_left" />

            <Button
                android:id="@id/pass_unpass_exit"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/autotest_exit"
                android:layout_weight="1.0"
                style="@style/style_bottom_button_right" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>