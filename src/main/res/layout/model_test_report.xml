<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@id/ButtonsLinearLayout">

        <ListView
            android:id="@id/failed_records"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <TextView
        android:textSize="25.0sp"
        android:layout_gravity="center"
        android:id="@id/all_test_passed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_test_ok"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@id/ButtonsLinearLayout"
        android:paddingLeft="200.0dip"
        android:paddingRight="20.0dip"
        android:paddingBottom="50.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:textSize="25.0sp"
            android:layout_gravity="center"
            android:id="@id/quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exitTest" />
    </LinearLayout>
</RelativeLayout>