<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <TextView
            android:textSize="40.0dip"
            android:gravity="center"
            android:id="@id/tv_calltest_infoshow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="50.0dip"
        android:paddingRight="50.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <Button
            android:textSize="30.0dip"
            android:gravity="center"
            android:id="@id/btn_call10086"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:text="@string/call10086"
            android:layout_weight="1.0" />

        <Button
            android:textSize="30.0dip"
            android:gravity="center"
            android:id="@id/btn_call10010"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:text="@string/call10010"
            android:layout_weight="1.0" />

        <Button
            android:textSize="30.0dip"
            android:gravity="center"
            android:id="@id/btn_call112"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:text="@string/call112"
            android:layout_weight="1.0" />

        <Button
            android:textSize="30.0dip"
            android:gravity="center"
            android:id="@id/btn_endcall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:layout_marginTop="40.0dip"
            android:layout_marginRight="40.0dip"
            android:text="@string/endcall"
            android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>