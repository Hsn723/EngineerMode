<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="@style/background_style"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:textSize="22.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps_ttff_is" />

            <TextView
                android:textSize="22.0sp"
                android:textColor="@color/blue"
                android:id="@id/autoAgingGpsTtff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:textSize="22.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps_time_is" />

            <TextView
                android:textSize="22.0sp"
                android:textColor="@color/blue"
                android:id="@id/autoAgingGpsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:textSize="22.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps_longitude_is" />

            <TextView
                android:textSize="22.0sp"
                android:textColor="@color/blue"
                android:id="@id/autoAgingGpsLongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:textSize="22.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps_accuracy_is" />

            <TextView
                android:textSize="22.0sp"
                android:textColor="@color/blue"
                android:id="@id/autoAgingGpsAccuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:textSize="22.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps_latitude_is" />

            <TextView
                android:textSize="22.0sp"
                android:textColor="@color/blue"
                android:id="@id/autoAgingGpsLatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:textSize="22.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps_speed_is" />

            <TextView
                android:textSize="22.0sp"
                android:textColor="@color/blue"
                android:id="@id/autoAgingGpsSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@id/autoAgingGpsList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/background_style" />

    <TextView
        android:textSize="27.0sp"
        android:gravity="center"
        android:id="@id/autoAgingGpsListEmpty"
        android:paddingLeft="30.0dip"
        android:paddingRight="30.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/gps_satellites_empty" />
</LinearLayout>